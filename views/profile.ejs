<% include partials/head %>

    <body>
        <div class="row">
            <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">
                <div class="text-center">
                    <h2 class=" fa fa-user"> Profile</h2>
                    <br>
                    <span><strong>user id</strong>: <%= user._id ? user._id : '' %></span><br>
                    <span class="fa fa-sign-out"><a href="/logout"> Sign out</a></span>
                    <hr>
                    <div class="jumbotron jumbotron-border jumbotron-bg">
                        <% if (user.local.email != null) { %>
                            <img src="https://avatars.io/gravatar/<%= user.local.email %>/140" class="img-circle"><br>
                            <strong>email</strong>: <%= user.local.email %><br>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
