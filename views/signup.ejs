<% include partials/head %>

    <body>
        <div class="row">
            <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">
                <div class="jumbotron text-center jumbotron-border jumbotron-bg">
                    <div class="row">
                        <div class="col-lg-8 col-lg-offset-2 col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-8 col-xs-offset-2">

                        <h2><span class="fa fa-beer" aria-hidden="true"></span> Brew Tool Sign Up</h2>
                
                        <% if (message != null) { %>
                            <div class="alert-danger"><%= message %></div>
                        <% } %>
                
                        <form action="/signup" method="post">
                            <div class="form-group">
                                <label>Email</label>
                                <input type="text" class="form-control" name="email">
                            </div>
                            <div class="form-group">
                                <label>Password</label>
                                <input type="password" class="form-control" name="password" />
                            </div>
                            <div>
                                <input type="submit" class="form-control" value="Submit" />
                            </div>
                        </form>
                    </div>
                </div>
                <hr>
                <span class="fa fa-sign-in"> Already have an account?<a href="/login"> Login</a></span>
                <p>Or go <a href="/">home</a>.</p>
            </div>
        </div>
    </body>
</html>
